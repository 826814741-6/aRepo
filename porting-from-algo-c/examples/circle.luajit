--
--	from src/circle.c
--
--	void gr_circle(int, int, int, long)		to	BMP; :circle
--

local M = require 'grBMP'
local H = require 'rand'

local BMP, BLACK = M.BMP, M.PRESET_COLORS.BLACK
local RAND = H.RAND

do
	local x, y = 640, 400
	local bmp = BMP(x, y)

	bmp:clear(BLACK)

	local r = RAND()
	for _=1,100 do
		bmp:circle(
			tonumber(r:rand()) % x,
			tonumber(r:rand()) % y,
			tonumber(r:rand()) % 100,
			tonumber(r:randRaw() % (0xffffff + 1))
		)
	end

	local fh = io.open("results/circle-lj.bmp", "wb")
	bmp:write(fh)
	fh:close()
end
